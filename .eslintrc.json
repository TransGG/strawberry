{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "class-methods-use-this": "off",
        "import/extensions": [
            "error",
            "ignorePackages"
        ],
        "indent": [
            "error",
            4
        ],
        "max-len": [
            "error",
            {
                "code": 120,
                "ignoreTrailingComments": true,
                "ignoreUrls": true
            }
        ],
        "no-console": "off",
        "no-multi-spaces": "off",
        "no-unused-vars": "warn",
        "linebreak-style": "off"
    }
}